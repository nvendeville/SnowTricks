<form method="post"
      action="{{ path('trick_delete', {'slug': trick.slug}) }}"
      onsubmit="return confirm(
          'Êtes-vous sûr(e) de vouloir supprimer ce trick ainsi que toutes ses images, vidéos et commentaires ?'
          );">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
    <div class="d-flex justify-content-center">
        <button class="btn btn-black"><i title="Supprimer le titre" class=" {% if app.request.attributes.get('_route') == 'trick_edit' %} text-blue {% else%} text-white {% endif %} fas fa-trash-alt"></i></button>
    </div>
</form>
